<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CardAvatar">
        <item name="android:layout_width">@dimen/size_logo</item>
        <item name="android:layout_height">@dimen/size_logo</item>
        <item name="android:src">@drawable/any</item>
        <item name="android:padding">@dimen/dimen_edge_margin</item>
    </style>

    <style name="CardTextBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>/>
    </style>

    <style name="CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

</resources>