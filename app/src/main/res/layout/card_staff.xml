<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/CardLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/card_staff"
        android:layout_width="@dimen/size_card_staff_width"
        android:layout_height="@dimen/size_card_staff_height"
        android:layout_gravity="center"
        card_view:cardCornerRadius="@dimen/radius_card_staff">

        <LinearLayout
            style="@style/CardLayout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageCardStaffPhoto"
                style="@style/CardAvatar"
                app:civ_border_color="@android:color/darker_gray"
                app:civ_border_width="@dimen/border_width_avatar"/>

            <TextView
                android:id="@+id/tvCardStaffId"
                android:text="0910117261981"
                style="@style/CardTextBold"/>

            <TextView
                android:id="@+id/tvCardStaffName"
                android:text="Syaiful Zuhri"
                style="@style/CardText"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>